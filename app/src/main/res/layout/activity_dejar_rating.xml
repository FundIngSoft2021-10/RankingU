<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombre_materia"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:text="Materia: "
        android:textColor="#000000"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/nombre_materia2"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:text="Pre-requisitos:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/nombre_materia3"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:text="Horario:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/nombre_materia4"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:text="Docente:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="323dp" />

    <TextView
        android:id="@+id/nombre_materia5"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:text="Ratings:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="380dp" />

    <Button
        android:id="@+id/boton_inscribir_materia"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:background="#008EFF"
        android:text="Inscribir materia"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/boton_inscribir_materia2"
        android:layout_width="162dp"
        android:layout_height="37dp"
        android:background="#008EFF"
        android:text="Dejar Rating"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="379dp" />

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="295dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="417dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>